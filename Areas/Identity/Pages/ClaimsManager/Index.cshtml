@page
@model BikeSparePartsShop.ClaimsManager.IndexModel
@{
    <h4>User Claims</h4>
    <a class="btn btn-success" asp-page="/ClaimsManager/Assign">Create a New Claim</a>
    <hr />

    @foreach (var user in Model.Users)
    {
        var claims = await Model._userManager.GetClaimsAsync(user); 
        if (claims.Any())
        {
            <h5>@user.UserName</h5>
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-primary">
                    <tr>
                        <th>Type</th>
                        <th>Value</th>
                        
                    </tr>
                    @foreach (var claim in claims)
                    {
                        <tr>
                            <td>@claim.Type</td>
                            <td>@claim.Value</td>
                           
                        </tr>

                    }
                </table>
            </div>
            <hr>
        }
    }
}
